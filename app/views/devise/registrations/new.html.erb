<div id="blog_post">
  <div class="container">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 silver-background">
      <div class="col-md-12 section_header center-text">
        <h3>Create your account</h3>
        <p>Enter your information and start posting match results today!</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field form-group">
          <%= f.label :email, class: "left-indent" %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control sign-up-form" %>

          <%= f.label :username, class: "left-indent" %><br />
          <%= f.text_field :username, autocomplete: "off", class: "form-control sign-up-form" %>

          <%= f.label :first_name, class: "left-indent" %><br />
          <%= f.text_field :first_name, autocomplete: "off", class: "form-control sign-up-form" %>

          <%= f.label :last_name, class: "left-indent" %><br />
          <%= f.text_field :last_name, autocomplete: "off", class: "form-control sign-up-form" %>

          <%= f.label :password, class: "left-indent" %>
          <% if @minimum_password_length %>
          <em class="">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control sign-up-form" %>

          <%= f.label :password_confirmation, class: "left-indent" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control sign-up-form" %>

        </div>
        <div class="actions center-text">
          <%= f.submit "Sign up", class: "btn btn-default" %>
        </div>

      <% end %>
      <%= render "devise/shared/links" %>
      <br>
      </div>
    </div>
  </div>
</div>