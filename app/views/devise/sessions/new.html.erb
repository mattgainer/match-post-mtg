<div id="sign_in1">
  <div class="container">
    <div class="row">
      <div class="col-md-12 header">
        <h4>Log in to your account</h4>
        <p>Welcome Back</p>
      </div>
      <div class="col-md-12 footer">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name, html: {class: "form-inline"})) do |f| %>
          <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-3 form-group">
              <%= f.label :email, class: "white-text" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
            <div class="col-md-2 form-group field">
              <br><br>
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "white-text" %>
              <% end %>
            </div>
            <div class="col-md-3 form-group">
              <%= f.label :password, class: "white-text sign-in-form" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
      </div>

        <div class="actions center-text">
          <%= f.submit "Log in", class: "btn btn-default" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>