<div class="container-fluid">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= form_for @format do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "New Format", class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>