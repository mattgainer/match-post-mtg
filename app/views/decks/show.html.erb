
<div id="blog_post">
  <div class="container">
    <div class="section_header">
      <h3><%= @deck.name %></h3>
    </div>
    <div class="row">
      <div class="col-sm-8 ">
        <img class="post_pic img-responsive center-margin" src=<%= @deck.deck_cards.find_by(key_card: true).card.image_url %> >
        <div class="post_content col-md-12">
          <h3><%= "By #{@deck.user.username}" %></h3>
          <span class="date">Created <%= @deck.dates[:create] %></span>
          <span class="date">Updated <%= @deck.dates[:update] %></span>
        </div>
        <div class="post_content col-md-12">
          <h3>Decklist</h3>
          <div class="col-md-6">
            <% card_count(@deck.deck_cards.where(removed: false)).each_with_index do |card, index| %>
            <p><%= "#{card[1]} #{card[0]}" %></p>
            <% if index == card_count(@deck.deck_cards).length/2 %>
          </div>
          <div class="col-md-6">
            <% end %>
          </div>
          <% end %>
        </div>
        <div class="comments col-md-12">
        <% @comments.each do |comment| %>
          <div class="comment">
            <div class="row">
              <div class="col-sm-12">
                <div class="name"><%= comment.user.username %></div>
                <div class="date"><%= comment.dates[:create] %></div>
                <div class="response"><%= comment.comment_text %></div>
              </div>
            </div>
          </div>
        <% end %>
          <% if current_user %>
          <div class="new_comment">
            <h4>Add Comment</h4>
            <%= form_tag "/comments", method: :post do %>
            <div class="row">
              <div class="col-sm-12">
                <%= text_area_tag :comment_text,"", rows: "7", class: "form-control add-comment" %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-sm-12">
                <%= submit_tag "Add Comment", class: "btn send" %>
              </div>
            </div>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
      <br>
      <!-- SideBar -->
      <div class="col-sm-4">
        <div class="sidebar">
          <div class="box">
            <div class="sidebar_header"></div>
            <div class="box last">
              <div class="sidebar_header">
                <h4>Words to make this column as wide as it can be</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
